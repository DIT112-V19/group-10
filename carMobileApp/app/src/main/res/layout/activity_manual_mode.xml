<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorBackgroundDark"
  tools:context=".ManualMode">

  <ImageView
    android:id="@+id/rightArrow"
    android:layout_width="140dp"
    android:layout_height="80dp"
    android:layout_marginStart="192dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/stopButton"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.797"
    app:srcCompat="@drawable/right_arrow" />

  <ImageView
    android:id="@+id/forwardArrow"
    android:layout_width="140dp"
    android:layout_height="80dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="260dp"
    android:longClickable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/forward_arrow" />

  <ImageView
    android:id="@+id/leftArrow"
    android:layout_width="140dp"
    android:layout_height="80dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="208dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/stopButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.797"
    app:srcCompat="@drawable/left_arrow" />

  <ImageView
    android:id="@+id/backwardArrow"
    android:layout_width="140dp"
    android:layout_height="80dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/backward_arrow" />

  <Button
    android:id="@+id/stopButton"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/circle_button"
    android:padding="12dp"
    android:text="@string/stop"
    android:textColorHighlight="#FF0000"
    android:textColorLink="#FF0000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.796" />

  <SeekBar
    android:id="@+id/seekBar2"
    style="@style/Widget.AppCompat.SeekBar.Discrete"
    android:layout_width="231dp"
    android:layout_height="100dip"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="30dp"
    android:max="5"
    android:paddingLeft="16dip"
    android:paddingTop="16dip"
    android:paddingRight="16dip"
    android:paddingBottom="16dip"
    android:progress="2"
    app:layout_constraintBottom_toTopOf="@+id/forwardArrow"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/joystickButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="144dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="179dp"
    android:backgroundTint="@color/buttonColorPurple"
    android:onClick="openJoystickMode"
    android:text="@string/joystick_mode"
    android:textColor="@color/textColorDark"
    android:layout_centerHorizontal="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.209"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/leftArrow" />



</android.support.constraint.ConstraintLayout>